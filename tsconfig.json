{
    "compilerOptions": {
        "target"          : "esnext",
        "module"          : "esnext",
        "lib"             : [
            "dom",
            "es2017",
            "scripthost"
        ],
        "strict"          : true,
        "moduleResolution": "node",
        "typeRoots"       : [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "downlevelIteration"    : true,
        "esModuleInterop"       : true
    }
}
