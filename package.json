{
    "name"           : "bubblesub",
    "version"        : "1.1.0",
    "description"    : "Observables based on DOM events",
    "main"           : "lib/index.cjs.js",
    "module"         : "lib/index.esm.js",
    "unpkg"          : "lib/index.umd.min.js",
    "types"          : "lib/index.d.ts",
    "repository"     : "https://github.com/zenwork/bubblesub.git",
    "author"         : "Florian Hehlen <florian@hehlen.name>",
    "license"        : "MIT",
    "keywords"       : [
        "typescript",
        "DI",
        "publisher",
        "subscriber",
        "event"
    ],
    "scripts"        : {
        "serve"        : "es-dev-server -c es-dev-server.config.js -w",
        "build.watch"  : "preppy --entry-lib=src/example/index.ts --entry-browser=src/example/index.ts --entry-node=src/example/index.ts --entry-cli=src/example/index.ts --watch",
        "build.example": "preppy --entry-lib=src/example/index.ts --entry-browser=src/example/index.ts --entry-node=src/example/index.ts --entry-cli=src/example/index.ts",
        "build"        : "preppy",
        "prepare"      : "rm -rf examples lib && yarn lint && yarn build.example && yarn test && mv -f lib examples && yarn build",
        "lint"         : "tslint -c tslint.json 'src/**/*.ts'",
        "test"         : "testcafe \"chrome:headless\" test/",
        "test.watch"   : "testcafe --live \"chrome:headless\" test/",
        "unit-test"    : "jest"
    },
    "devDependencies": {
        "@babel/core"                            : "^7.6.0",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-decorators"      : "^7.6.0",
        "@babel/plugin-transform-runtime"        : "^7.6.0",
        "@babel/preset-env"                      : "^7.6.0",
        "@babel/preset-typescript"               : "^7.6.0",
        "@babel/runtime"                         : "^7.6.0",
        "@babel/runtime-corejs3"                 : "^7.6.0",
        "@types/jest"                            : "^24.0.18",
        "corejs"                                 : "^1.0.0",
        "es-dev-server"                          : "^1.17.2",
        "jest"                                   : "^24.9.0",
        "preppy"                                 : "^8.3.1",
        "testcafe"                               : "^1.5.0",
        "tslint"                                 : "^5.19.0",
        "typescript"                             : "^3.6.2"
    },
    "files"          : [
        "lib",
        "examples",
        "README.md"
    ]
}
